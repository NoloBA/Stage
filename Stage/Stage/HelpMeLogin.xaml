<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Stage.HelpMeLogin" Title="Trouble logging in?">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Getting back into your account"
                   FontAttributes="Bold"
                   VerticalOptions="Start"
                   Margin="20,50,0,0"
                   TextColor="Black"
                   FontSize="Large"/>
            <Label Text="Tell us some information about your account"
                   TextColor="Black"
                   Margin="20"/>

            <Label Text="Enter your email or phone number" Margin="20,0"/>
            <Frame OutlineColor="MediumPurple"
                       BorderColor="MediumPurple"
                       BackgroundColor="White"
                       CornerRadius="7"
                       Margin="20,0,20,0"
                       Padding="0">
                <Entry Placeholder="Password" IsPassword="True" Margin="20,0,0,0"/>
            </Frame>
            <Button IsEnabled="False" Text="Continue" Margin="20"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>